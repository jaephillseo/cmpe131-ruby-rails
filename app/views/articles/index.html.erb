<h1>Listings</h1>

<table style="width:100%">
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<!--iterating through articles and printing it-->
	<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.description %></td>
		<td><%= link_to 'Edit', edit_article_path(article) %></td>
		<td><%= link_to 'Show', article_path(article) %></td>
	</tr>
	<% end %>
</table>

<p>
	<%= link_to "Create new posting", new_article_path %>
</p>