
<h1 align="center">All TextChange Profile</h1>
<div align="center">
  <%= @users.each do |user| %>
    <ul class ="listing">
      <div class ="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="book-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <!--show post count if user has articles/post -->
          <li><small><%= pluralize(user.articles.count, "post") if user.articles %></small></li>
        </div>
      </div>
    </ul>

  <% end %>
</div>
